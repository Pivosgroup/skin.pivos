<window type="dialog" id="2000">
	<defaultcontrol always="true">3</defaultcontrol>
	<controls>
		<control type="group">
			<posx>300</posx>
			<posy>60</posy>
			<width>560</width>
			<height>600</height>
			<include>WindowOpenCloseZoomInOut</include>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>560</width>
				<height>600</height>
				<texture border="18">dialog-back.png</texture>
			</control>
			<control type="list" id="3">
				<posx>30</posx>
				<posy>60</posy>
				<width>500</width>
				<height>480</height>
				<onup>3</onup>
				<ondown>3</ondown>
				<onleft>3</onleft>
				<onright>3</onright>
				<itemlayout width="500" height="40">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>500</width>
						<height>40</height>
						<texture border="6">button_NF.png</texture>
					</control>
					<control type="label">
						<posx>250</posx>
						<posy>0</posy>
						<width>500</width>
						<height>40</height>
						<label>[B]$INFO[ListItem.Label][/B]</label>
						<font>font16m</font>
						<textcolor>lightgrey</textcolor>
						<selectedcolor>white</selectedcolor>
						<align>center</align>
						<aligny>center</aligny>
					</control>
				</itemlayout>
				<focusedlayout width="500" height="40">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>500</width>
						<height>40</height>
						<texture border="6">button_NF.png</texture>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>500</width>
						<height>40</height>
						<texture border="4">button_FO.png</texture>
						<animation effect="slide" start="0,-40" end="0,0" time="150" reversible="false" tween="quadratic" easing="out" condition="Container(3).OnNext">focus</animation>
						<animation effect="slide" start="0,40" end="0,0" time="150" reversible="false" tween="quadratic" easing="out" condition="Container(3).OnPrevious">focus</animation>
					</control>
					<control type="label">
						<posx>250</posx>
						<posy>0</posy>
						<width>500</width>
						<height>40</height>
						<label>[B]$INFO[ListItem.Label][/B]</label>
						<font>font16m</font>
						<textcolor>white</textcolor>
						<selectedcolor>white</selectedcolor>
						<align>center</align>
						<aligny>center</aligny>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>
