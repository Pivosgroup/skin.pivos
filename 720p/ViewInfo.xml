<includes>
	<include name="ViewInfo">
		<control type="list" id="53">
			<posx>105</posx>
			<posy>172</posy>
			<width>1175</width>
			<height>375</height>
			<viewtype label="31029">icon</viewtype>
			<preloaditems>2</preloaditems>
