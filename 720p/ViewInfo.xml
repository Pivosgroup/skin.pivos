					<posy>0</posy>
					<width>375</width>
					<height>375</height>
					<texture></texture>
				</control>
			</focusedlayout>
		</control>
		<control type="image">
			<posx>100</posx>
			<posy>620</posy>
			<width>1180</width>
			<height>140</height>
			<texture>floor.png</texture>
			<include>ViewFade</include>
			<include>WindowOpenCloseFade</include>
			<visible>Control.IsVisible(53)</visible>
		</control>
