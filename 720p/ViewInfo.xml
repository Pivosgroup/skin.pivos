				<bordersize>20</bordersize>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<fadetime>CrossFade</fadetime>
				<animation effect="rotatey" start="-50" end="-50" center="0,0" time="0" condition="true">Conditional</animation>
			</control>
			<control type="image">
				<posx>220</posx>
