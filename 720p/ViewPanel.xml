<includes>
	<include name="ViewPanelVideo">
		<control type="group">
			<posx>115</posx>
			<posy>60</posy>	
			<width>1120</width>
			<height>624</height>			
			<include>WindowOpenCloseZoomInOut</include>
			<control type="panel" id="50">
				<posx>0</posx>
				<posy>0</posy>
				<width>1120</width>
				<height>624</height>
				<viewtype label="21371">icon</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<preloaditems>4</preloaditems>
				<onleft>9000</onleft>
				<onright>60</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<orientation>horizontal</orientation>
				<itemlayout width="140" height="208">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>140</width>
						<height>208</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout width="140" height="208">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>140</width>
						<height>208</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation effect="zoom" start="100" end="130" time="200" center="auto">Focus</animation>
						<animation effect="zoom" start="130" end="100" time="200" center="auto">UnFocus</animation>
					</control>
				</focusedlayout>
			</control>
		</control>
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<control type="label">
				<posx>0</posx>
				<posy>690</posy>
				<width>1280</width>
				<height>30</height>
				<label>[B]$INFO[ListItem.Label][/B]</label>
				<font>font20</font>
				<textcolor>white</textcolor>
				<shadowcolor>FF000000</shadowcolor>
				<align>center</align>
			</control>
		</control>
	</include>
</includes>
