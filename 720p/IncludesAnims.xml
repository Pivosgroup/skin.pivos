<includes>
	<include name="SubMenuFade">
		<animation type="Visible">
			<effect type="fade" start="0" end="100" time="150"/>
		</animation>
		<animation type="Hidden">
			<effect type="fade" start="100" end="0" time="150"/>
		</animation>
	</include>
	<include name="ViewFade">
		<animation type="Visible">
			<effect type="fade" start="0" end="100" time="200"/>
		</animation>
		<animation type="Hidden">
			<effect type="fade" start="100" end="0" time="200"/>
		</animation>
	</include>
	<include name="VisibleFade">
		<animation type="Visible">
			<effect type="fade" start="0" end="100" time="400"/>
		</animation>
		<animation type="Hidden">
			<effect type="fade" start="100" end="0" time="400"/>
		</animation>
	</include>
	<include name="VisibleZoomInOut">
		<animation type="Visible">
			<effect type="zoom" start="60" end="100" center="auto" time="400" tween="sine" easing="out"/>
			<effect type="fade" start="0" end="100" time="400"/>
		</animation>
		<animation type="Hidden">
			<effect type="zoom" start="100" end="60" center="auto" time="400" tween="sine" easing="in"/>
			<effect type="fade" start="100" end="0" time="400"/>
		</animation>
	</include>
	<include name="WindowOpenCloseZoomInOut">
		<animation type="WindowOpen">
			<effect type="zoom" start="60" end="100" center="auto" time="400" tween="sine" easing="out"/>
			<effect type="fade" start="0" end="100" time="400"/>
		</animation>
		<animation type="WindowClose">
			<effect type="zoom" start="100" end="60" center="auto" time="400" tween="sine" easing="in"/>
			<effect type="fade" start="100" end="0" time="400"/>
		</animation>
	</include>
	<include name="WindowOpenCloseZoomInOutSettings">
		<animation type="WindowOpen" condition="![Window.Previous(AppearanceSettings) | Window.Previous(VideosSettings) | Window.Previous(MusicSettings) | Window.Previous(PicturesSettings) | Window.Previous(WeatherSettings) | Window.Previous(NetworkSettings) | Window.Previous(SystemSettings)]">
			<effect type="zoom" start="60" end="100" center="auto" time="400" tween="sine" easing="out"/>
			<effect type="fade" start="0" end="100" time="400"/>
		</animation>
		<animation type="WindowClose" condition="![Window.Next(AppearanceSettings) | Window.Next(VideosSettings) | Window.Next(MusicSettings) | Window.Next(PicturesSettings) | Window.Next(WeatherSettings) | Window.Next(NetworkSettings) | Window.Next(SystemSettings)]">
			<effect type="zoom" start="100" end="60" center="auto" time="400" tween="sine" easing="in"/>
			<effect type="fade" start="100" end="0" time="400"/>
		</animation>
	</include>
	<include name="WindowOpenCloseZoomOutIn">
		<animation type="WindowOpen">
			<effect type="zoom" start="160" end="100" center="auto" time="400" tween="sine" easing="out"/>
			<effect type="fade" start="0" end="100" time="400"/>
		</animation>
		<animation type="WindowClose">
			<effect type="zoom" start="100" end="160" center="auto" time="400" tween="sine" easing="in"/>
			<effect type="fade" start="100" end="0" time="400"/>
		</animation>
	</include>
	<include name="WindowOpenCloseFade">
		<animation type="WindowOpen">
			<effect type="fade" start="0" end="100" time="400"/>
		</animation>
		<animation type="WindowClose">
			<effect type="fade" start="100" end="0" time="400"/>
		</animation>
	</include>
	<include name="WindowOpenCloseFadeHome">
		<animation type="WindowOpen">
			<effect type="fade" start="0" end="100" time="150" delay="250"/>
		</animation>
		<animation type="WindowClose">
			<effect type="fade" start="100" end="0" time="150"/>
		</animation>
	</include>
	<include name="WindowOpenCloseFadeSettings">
		<animation type="WindowOpen" condition="![Window.Previous(AppearanceSettings) | Window.Previous(VideosSettings) | Window.Previous(MusicSettings) | Window.Previous(PicturesSettings) | Window.Previous(WeatherSettings) | Window.Previous(NetworkSettings) | Window.Previous(SystemSettings)]">
			<effect type="fade" start="0" end="100" time="400"/>
		</animation>
		<animation type="WindowClose" condition="![Window.Next(AppearanceSettings) | Window.Next(VideosSettings) | Window.Next(MusicSettings) | Window.Next(PicturesSettings) | Window.Next(WeatherSettings) | Window.Next(NetworkSettings) | Window.Next(SystemSettings)]">
			<effect type="fade" start="100" end="0" time="400"/>
		</animation>
	</include>
	<include name="WindowOpenCloseSlide">
		<animation type="WindowOpen">
			<effect type="slide" start="-1265,0" end="0,0" time="250"/>
		</animation>
		<animation type="WindowClose">
			<effect type="slide" start="0,0" end="-1265,0" time="250" delay="150"/>
		</animation>
	</include>
	<include name="WindowOpenCloseSlideHome">
		<animation type="WindowOpen">
			<effect type="slide" start="-318,0" end="0,0" time="400"/>
		</animation>
		<animation type="WindowClose">
			<effect type="slide" start="0,0" end="-318,0" time="400"/>
		</animation>
	</include>
</includes>
