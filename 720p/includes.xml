<includes>
	<include file="defaults.xml"/>
	<include file="IncludesAnims.xml"/>/
	<include name="DefaultBackground">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>special://skin/backgrounds/DefaultBackground.jpg</texture>
		</control>
	</include>
	<include name="Fanart">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
			<aspectratio>scale</aspectratio>
			<fadetime>250</fadetime>
			<colordiffuse>30FFFFFF</colordiffuse>
			<include>WindowOpenCloseFade</include>
			<include>VisibleFade</include>
			<visible>!IsEmpty(ListItem.Property(Fanart_Image))</visible>
		</control>
	</include>
	<include name="Header">
		<control type="grouplist">
			<posx>354</posx>
			<posy>14</posy>
			<width>900</width>
			<height>30</height>
			<align>right</align>
			<orientation>horizontal</orientation>
			<control type="label">
				<width min="10" max="100">auto</width>
				<height>20</height>
				<label>[B]$INFO[Weather.Temperature]    [/B]</label>
				<font>font20</font>
				<textcolor>lightgrey</textcolor>
			</control>
			<control type="label">
				<width min="10" max="400">auto</width>
				<height>20</height>
				<label>[B]$INFO[System.Date][/B]</label>
				<font>font20</font>
				<textcolor>lightgrey</textcolor>
			</control>
			<control type="group">
				<width>10</width>
				<control type="image">
					<posx>4</posx>
					<posy>5</posy>
					<width>2</width>
					<height>20</height>
					<texture>white.png</texture>
				</control>
			</control>
			<control type="label">
				<width min="10" max="400">auto</width>
				<height>20</height>
				<label>[B]$INFO[System.Time][/B]</label>
				<font>font20</font>
				<textcolor>grey</textcolor>
			</control>
		</control>
	</include>
	<include name="HomeSubButton">
		<width>170</width>
		<height>26</height>
		<font>font20</font>
		<textcolor>white</textcolor>
		<texturefocus>-</texturefocus>
		<texturenofocus>-</texturenofocus>
	</include>
</includes>
