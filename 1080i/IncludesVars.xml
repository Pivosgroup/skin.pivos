<includes>
	<variable name="DurationLabel">
		<value condition="!substring(ListItem.Duration,min)">$INFO[ListItem.Duration,, $LOCALIZE[12391]]</value>
		<value condition="substring(ListItem.Duration,min)">$INFO[ListItem.Duration]</value>
	</variable>
	<variable name="HomeSettingsButton">
		<value condition="!Control.HasFocus(20)">Settings.png</value>
		<value condition="Control.HasFocus(20)">SettingsFocus.png</value>
	</variable>
	<variable name="HomePowerButton">
		<value condition="!Control.HasFocus(21)">Power.png</value>
		<value condition="Control.HasFocus(21)">PowerFocus.png</value>
	</variable>
	<variable name="PlotLabel">
		<value condition="!IsEmpty(ListItem.PlotOutline)">$INFO[ListItem.PlotOutline]</value>
		<value condition="IsEmpty(ListItem.PlotOutline) + !IsEmpty(ListItem.TagLine)" >$INFO[ListItem.TagLine]</value>
		<value condition="IsEmpty(ListItem.PlotOutline) + IsEmpty(ListItem.TagLine)">$INFO[ListItem.Plot]</value>
	</variable>
</includes>
